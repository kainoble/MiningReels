<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/settngs"
        android:contentDescription="@string/activity_settings"
        android:importantForAccessibility="no">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/text_settings"
            android:fontFamily="@font/almendra_sc"
            android:textColor="@color/white"
            android:text="Setting"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="105dp"
            android:contentDescription="@string/text_music"
            android:textColor="@color/white"
            android:fontFamily="@font/almendra_sc"
            android:text="Music"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="160dp"
            android:textColor="@color/white"
            android:fontFamily="@font/almendra_sc"
            android:text="Sound"
            android:contentDescription="@string/text_sound"
            android:textSize="30dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/exit"
            android:contentDescription="@string/button_close"
            android:importantForAccessibility="no"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/music_on"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/toggle_btn_on"
            android:contentDescription="@string/toggle_music_on"
            android:importantForAccessibility="no"
            android:padding="2dp" />


        <ImageView
            android:id="@+id/music_off"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/toggle_btn_off"
            android:contentDescription="@string/toggle_music_off_invisible"
            android:importantForAccessibility="no"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sounds_on"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/toggle_btn_on"
            android:contentDescription="@string/toggle_music_on"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/sounds_off"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/toggle_btn_off"
            android:contentDescription="@string/toggle_music_off_invisible"
            android:importantForAccessibility="no"
            android:visibility="invisible" />


    </RelativeLayout>
</RelativeLayout>